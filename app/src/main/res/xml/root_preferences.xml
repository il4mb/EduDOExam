<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Theme">

        <SwitchPreferenceCompat
            app:key="@string/pref_dark_mode"
            app:title="Dark Mode"
            app:defaultValue="false"
            app:summaryOff="Enable dark theme"
            app:summaryOn="Disable dark theme"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Notification">

        <SwitchPreferenceCompat
            app:key="@string/pref_upcoming_notification"
            app:title="Upcoming"
            app:summary="notifications for upcoming exams"/>

    </PreferenceCategory>

</PreferenceScreen>