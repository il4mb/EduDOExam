            android:id="@+id/action_nav_exam_detail_to_nav_student_result"
            app:destination="@id/nav_student_result"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/nav_form_question"
        android:name="com.il4mb.edudoexam.ui.dashboard.exams.detail.questions.FormQuestionFragment"
        android:label="@string/form_question"
        tools:layout="@layout/fragment_form_question" />
    <fragment
        android:id="@+id/nav_exam_config"
        android:name="com.il4mb.edudoexam.ui.dashboard.exams.detail.config.ExamConfigFragment"
        android:label="@string/exam_config"
        tools:layout="@layout/fragment_exam_detail_config" >
        <action
            android:id="@+id/action_nav_exam_config_to_nav_exam_detail"
            app:destination="@id/nav_exam_detail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/nav_store_showcase"
        android:name="com.il4mb.edudoexam.ui.dashboard.store.StoreFragment"
        android:label="Increase You Limit"
        tools:layout="@layout/fragment_store" />

</navigation>