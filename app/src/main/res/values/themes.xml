<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EduDOExam" parent="Theme.Material3.Light.NoActionBar">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:fontWeight">500</item>

        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">#0075DD</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="android:textColor">@color/text_dark</item>

        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="PopupAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>


    <style name="Theme.EduDOExam.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@drawable/rounded_bottom_corner</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">?colorPrimaryVariant</item>
        <item name="strokeColor">#000000</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
    </style>

    <style name="SlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


</resources>