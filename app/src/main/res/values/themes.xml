<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.EduDOExam" parent="Theme.Material3.Light.NoActionBar">

        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:fontWeight">500</item>

        <item name="colorPrimary">#294368</item>
        <item name="android:textColorHighlight">#BEDFFF</item>
        <item name="colorPrimaryVariant">#3996E9</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="android:textColor">@color/text</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorControlNormal">@color/secondary</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>

    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.EduDOExam.Splash">
        <item name="android:windowBackground">@drawable/splash_icon</item>
    </style>

    <style name="Theme.EduDOExam.Button" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/primary</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    <style name="Theme.EduDOExam.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="backgroundTint">@color/primary_variant</item>
    </style>
    <style name="Theme.EduDOExam.Button.Secondary.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="backgroundTint">@color/bg_danger</item>
    </style>
    <style name="Theme.EduDOExam.Button.Danger" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/danger</item>
        <item name="android:textColor">?android:colorBackground</item>
        <item name="backgroundTint">@color/danger</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="PopupAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="Theme.EduDOExam.AppBarLayout">
        <item name="android:background">@drawable/rounded_bottom_corner</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:paddingStart">@dimen/dp_18</item>
        <item name="android:paddingEnd">@dimen/dp_18</item>
        <item name="android:paddingTop">@dimen/dp_18</item>
        <item name="android:paddingBottom">@dimen/dp_18</item>
        <item name="titleTextColor">@color/secondary</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
        <item name="subtitleTextColor">@color/secondary_light</item>
    </style>
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
    </style>
    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/input_box_color</item>
        <item name="colorOnSurface">@color/input_box_outline</item>
        <item name="colorError">@color/input_box_error</item>
    </style>

    <style name="SlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Theme.EduDOExam.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EduDOExam.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EduDOExam.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>